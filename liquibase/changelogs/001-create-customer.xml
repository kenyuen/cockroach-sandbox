<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <!-- GENERATED â€” review before use -->
  <!-- Changeset: create database `app`, schema `customers`, and customer table in customers schema -->

  <changeSet id="001-create-customer-schema-and-table" author="copilot">

    <!-- Create database. TODO: review if running against a managed DB; ensure caller has CREATE DATABASE privilege -->
    <sql>CREATE DATABASE IF NOT EXISTS app;</sql>

    <!-- Switch the session to the new database so subsequent schema/table creation occurs in `app` -->
    <sql>SET DATABASE = app;</sql>

    <!-- Create schema inside `app` -->
    <sql>CREATE SCHEMA IF NOT EXISTS customers;</sql>

    <!-- Create customer table inside customers schema -->
    <createTable schemaName="customers" tableName="customer">
      <column name="id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="region" type="VARCHAR(32)">
        <constraints nullable="false"/>
      </column>
      <column name="first_name" type="VARCHAR(100)"/>
      <column name="last_name" type="VARCHAR(100)"/>
      <column name="email" type="VARCHAR(255)"/>
      <column name="phone" type="VARCHAR(50)"/>
      <column name="address" type="VARCHAR(500)"/>
      <column name="created_at" type="TIMESTAMPTZ" defaultValueComputed="now()"/>
    </createTable>

    <!-- Indexes -->
    <createIndex indexName="idx_customer_region" schemaName="customers" tableName="customer">
      <column name="region"/>
    </createIndex>

    <createIndex indexName="idx_customer_email" unique="true" schemaName="customers" tableName="customer">
      <column name="email"/>
    </createIndex>

    <!-- Ensure a local development user `demo` exists and transfer ownership to that user.
         NOTE: In this local setup `demo` is expected to have no password. In production, create users and manage credentials through a secret manager.
         If your Cockroach version does not support CREATE USER IF NOT EXISTS, create the user in your init script instead. -->
    <sql>CREATE USER IF NOT EXISTS demo;</sql>

    <!-- Transfer ownership so `demo` becomes the owner of the schema and table -->
    <sql>ALTER SCHEMA customers OWNER TO demo;</sql>
    <sql>ALTER TABLE customers.customer OWNER TO demo;</sql>

    <!-- Grant basic privileges to demo for convenience in local dev -->
    <sql>GRANT ALL ON SCHEMA customers TO demo;</sql>
    <sql>GRANT ALL ON TABLE customers.customer TO demo;</sql>

  </changeSet>

</databaseChangeLog>
